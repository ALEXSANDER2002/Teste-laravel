# Aplicação
APP_NAME=SimplesHotel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Banco de Dados (SQLite)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Cache e Sessão
CACHE_STORE=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Arquivos
FILESYSTEM_DISK=local

# Mail (exemplo usando log; para SMTP preencha os campos abaixo)
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcast / Redis (opcional)
# BROADCAST_DRIVER=log
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Frontend (Vite)
VITE_APP_NAME="${APP_NAME}"


